<h1><%= @competition.name %></h1>

<%= link_to "Add team", add_competition_team_path(), :class => "add_team button add_btn left", :style => "margin-top: 0;" %>
<%= link_to "Add applicants", add_users_to_competition_path(@competition.id), :class => "button add_wide_btn left", :style => "margin-top: 0;" %>
<br class="clear" />
<br />
<h1>Manage Teams</h1>
<div class="list">
  <% @teams.each do |team| %>
  <div class="row">
    <h3><%= team.name %>(<%= team.memberships.count %>)</h3>
      <% if !team.memberships.any? %>
        <%= link_to "", remove_team_path(team.id), :class => "delete_icon right" %>
      <% end %>
      <%= link_to "", competition_team_manage_path(team.id), :class => "manage_icon right" %>
  </div>
  <% end %>
</div>

<%= link_to "Back", admin_competitions_path, :class => "button back_btn clear" %>
