<h1>Create event</h1>
<%= form_for @event , :url => { :action => "create" } do |f| %>

	<label class="input-label">
			<%=  f.text_field :name , :maxlength => 30,  :class=>"textbox" , :placeholder => "Event name" %>
	</label>
	<br />
	<label class="input-label">
			<%=  f.text_area :message, :maxlength => 256, :class=>"textarea", :placeholder=> "Event message", :size => "33x5"%>
	</label>
	<br />
	<label class="input-label">
			<%=  f.text_field :start_at , :maxlength => 15,  :class=>"textbox" , :placeholder => "Start at" %>
	</label>
	<br />
	<label class="input-label">
			<%=  f.text_field :end_at , :maxlength => 15,  :class=>"textbox" , :placeholder => "End at" %>
	</label>
	<br />
	<label class="input-label">
  			<%= f.collection_select :team_id, @teams, :id, :name, {:include_blank => 'Select club/team'},{:class => 'combobox' }%>
  	</label>
  	<br />
    <%= f.submit "Add event", :class=>"button add_btn" %>
<% end %>

<script>
    $(document).ready(function(){
            $('#event_start_at').datetimepicker({
                ampm: true,
                dateFormat: 'dd/mm/yy',
                hour: 8,
                minDate: +1
            });
            $('#event_end_at').datetimepicker({
                ampm: true,
                dateFormat: 'dd/mm/yy',
                hour: 8,
                minDate: +1
            });
    });
      $(function(){
      $(".textbox").addPlaceholder();
      $(".combobox").addPlaceholder();
      $("#event_name").validate({
            expression: "if (VAL) return true; else return false;",
            message: "Please enter a event name",
            error_field_class: "field_with_errors",
            error_class: "error_message"
      });
      $("#event_message").validate({
            expression: "if (VAL) return true; else return false;",
            message: "Please enter a event message",
            error_field_class: "field_with_errors",
            error_class: "error_message"
      });
      $("#event_start_at").validate({
            expression: "if (VAL) return true; else return false;",
            message: "Please enter a valid event start date",
            error_field_class: "field_with_errors",
            error_class: "error_message"
      });
      $("#event_end_at").validate({
            expression: "if (VAL) return true; else return false;",
            message: "Please enter a event end date",
            error_field_class: "field_with_errors",
            error_class: "error_message"
      });
      $("#event_team_id").validate({
            expression: "if (VAL) return true; else return false;",
            message: "Please select a club or team",
            error_field_class: "field_with_errors",
            error_class: "error_message"
      });
   });
</script>
